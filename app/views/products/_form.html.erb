<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>

      <% if @product.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class:"form-control input-lg", placeholder: "Introduce the product name" %>
        </div>
        <div class="form-group">
          <%= f.url_field :url, class:"form-control input-lg", placeholder: "Introduce the url of the product" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class:"form-control input-lg", placeholder: "Introduce the description of the product" %>
        </div>
        <div>
          <%= f.submit form_title, class:"btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>