<!-- Estamos creando una SESION para autenticar el ingreso de un usuario -->
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Ingresar</h1>
      <!-- El form_tag dice el controlador que va a manejar el form (action="") y el método a utilizar enlazado a la acción de dicho controlador (action: :create => Enlazado a ruta post 'login'...) -->
      <%= form_tag controller: :sessions, action: :create do %>
        <div class="form-group">
          <%= label_tag(:email, "Email") %>
          <%= email_field_tag(:email, nil, class: 'form-control input-lg') %>
        </div>
        <div class="form-group">
          <%= label_tag(:password, "Password") %>
          <%= password_field_tag(:password, nil, class: 'form-control input-lg') %>
        </div>
        <div class="text-right"><%= submit_tag("Ingresar", class: 'btn btn-primary btn-lg btn-block') %></div>
      <% end %>
    </div>
  </div>
</div>